}
_buildItem({required value}){
        return DropdownButton(
            value: dropdownvalue,
            items: _produtos.map((String items) {
                return DropdownMenuItem(
                  value: items,
                  child: Text(items),
                );
              }).toList(),
              onChanged:  (String? newValue) { 
                setState(() {
                  dropdownvalue = newValue!;
                });
              },
        );
      }
}

